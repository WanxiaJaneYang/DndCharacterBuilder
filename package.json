{
  "name": "dnd-character-builder",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm --workspace @dcb/web run dev",
    "build": "npm --workspaces run build",
    "typecheck": "npm --workspaces run typecheck",
    "lint": "npm --workspaces run lint",
    "test": "npm --workspaces run test",
    "contracts": "npm --workspace @dcb/contracts run test",
    "test:visual": "playwright test",
    "test:visual:update": "playwright test --update-snapshots",
    "playwright:install": "playwright install chromium",
    "locale:template": "node scripts/localization/generate-locale-template.mjs"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  }
}
